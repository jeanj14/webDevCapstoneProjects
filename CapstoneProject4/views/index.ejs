<%- include('partials/header.ejs') %>
<body>
    <div class="p-8 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
        <div class="col-lg-6 px-0">
          <% const businessArticles = business.articles %>
          <% let randomIndex = Math.floor(Math.random() * businessArticles.length) + 1 %>
          <% const businessArticle = businessArticles[randomIndex] %>
          <h1 class="display-4 fst-italic"> <%= businessArticle.title %></h1>
          <p class="lead my-3"><%= businessArticle.description %></p>
          <p class="lead mb-0"><a href="<%= businessArticle.url %>" target="_blank" class="text-body-emphasis fw-bold">Continue reading...</a></p>
        </div>
        <img src="<%= businessArticle.urlToImage %>" class="business-img object-fit-cover rounded float-end col-lg-4 col-sm-6"  alt="...">
        <!-- <img src="https://images.pexels.com/photos/26150745/pexels-photo-26150745/free-photo-of-green-grassland-with-trees-in-countryside.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="object-fit-cover rounded float-end col-lg-4 col-sm-6"  alt="..."> -->
      </div>

      <div class="row mb-2">
        <div class="col-md-6">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <% const sportArticles = sports.articles %>
              <% console.log(sportArticles) %>
              <% const sportArticle = sportArticles[randomIndex] %>
              <strong class="d-inline-block mb-2 text-primary-emphasis">Sport</strong>
              <h3 class="mb-0"><%= sportArticle.title %></h3>
              <% const sportArticleDate = Date.parse(sportArticle.publishedAt) %>
              <div class="mb-1 text-body-secondary"><%= sportArticleDate %></div>
              <p class="card-text mb-auto"><%= sportArticle.description %></p>
              <a href="<%= sportArticle.url %>" class="icon-link gap-1 icon-link-hover stretched-link">
                Continue reading
                <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
              </a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <img class="bd-placeholder-img object-fit-cover" width="200" height="250" src="<%= sportArticle.urlToImage %>" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"></img>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <% const techArticles = technology.articles 
                 const techArticle = techArticles[randomIndex]
              %>
              <strong class="d-inline-block mb-2 text-success-emphasis">Technology</strong>
              <h3 class="mb-0"><%= techArticle.title %></h3>
              <div class="mb-1 text-body-secondary">Nov 11</div>
              <p class="mb-auto"><%= techArticle.description %></p>
              <a href="<%= techArticle.url %>" class="icon-link gap-1 icon-link-hover stretched-link">
                Continue reading
                <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
              </a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <img class="bd-placeholder-img object-fit-cover" width="200" height="250" src="<%= techArticle.urlToImage %>" alt="">
            </div>
          </div>
        </div>
      </div>
</body>
<%- include('partials/footer.ejs') %>